{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "azureStorageLocation": {
      "type": "String"
    },
    "azureStorageName": {
      "type": "String"
    },
    "azureStorageType": {
      "type": "String"
    },
    "existingStorageRG": {
      "type": "String"
    },
    "informaticaTags": {
      "type": "object"
    }
  },
  "variables": {
    "apiVersion": "2016-01-01"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "[parameters('azureStorageType')]"
      },
      "kind": "Storage",
      "apiVersion": "[variables('apiVersion')]",
      "name": "[parameters('azureStorageName')]",
      "location": "[parameters('azureStorageLocation')]",
      "tags": {
        "displayName": "storage",
        "provider": "[toUpper(parameters('informaticaTags').provider)]"
      },
      "properties": {},
      "dependsOn": []
    }
  ],
  "outputs": {
    "storageId": {
      "value": "[resourceId('Microsoft.Storage/storageAccounts', parameters('azureStorageName'))]",
      "type": "string"
    },
    "storageRef": {
      "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('azureStorageName'))).primaryEndpoints.blob]",
      "type": "string"
    }
  }
}
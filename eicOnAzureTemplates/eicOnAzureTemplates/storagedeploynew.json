{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "azureStorageLocation": {
      "type": "String"
    },
    "azureStorageName": {
      "type": "String"
    },
    "azureStorageType": {
      "type": "String"
    },
    "existingStorageRG": {
      "type": "String"
    },
    "informaticaTags": {
      "type": "object"
    },
    "storageExistingOrNew": {
      "type": "string"
    }
  },
  "variables": {
    "apiVersion": "2016-01-01",
    "storageIDs": {
      "existing": "[resourceId(parameters('existingStorageRG'), 'Microsoft.Storage/storageAccounts', parameters('azureStorageName'))]",
      "new": "[resourceId('Microsoft.Storage/storageAccounts', parameters('azureStorageName'))]"
    },
    "storageID": "[variables('storageIDs')[parameters('storageExistingOrNew')]]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "[parameters('azureStorageType')]"
      },
      "condition": "[equals(parameters('storageExistingOrNew'), 'new')]",
      "kind": "Storage",
      "apiVersion": "[variables('apiVersion')]",
      "name": "[parameters('azureStorageName')]",
      "location": "[parameters('azureStorageLocation')]",
      "tags": {
        "displayName": "storage",
        "provider": "[toUpper(parameters('informaticaTags').provider)]"
      },
      "properties": {},
      "dependsOn": []
    }
  ],
  "outputs": {
    "storageId": {
      "value": "[variables('storageID')]",
      "type": "string"
    },
    "storageFqdn": {
      "value": "[reference(variables('storageID'),variables('apiVersion')).primaryEndpoints.blob]",
      "type": "string"
    }
  }
}
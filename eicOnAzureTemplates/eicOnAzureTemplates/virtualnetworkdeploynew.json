{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetLocation": {
      "type": "string"
    },
    "informaticaVirtualNetworkName": {
      "type": "string"
    },
    "informaticaVirtualNetworkAddressPrefix": {
      "type": "string"
    },
    "informaticaSubnetName": {
      "type": "string"
    },
    "informaticaSubnetAddressPrefix": {
      "type": "string"
    },
    "existingVnetRG": {
      "type": "string"
    },
    "informaticaTags": {
      "type": "object"
    },
    "vnetExistingOrNew": {
      "type": "string"
    }
  },
  "variables": {
    "vnetIDs": {
      "existing": "[resourceId(parameters('existingVnetRG'), 'Microsoft.Network/virtualNetworks', parameters('informaticaVirtualNetworkName'))]",
      "new": "[resourceId('Microsoft.Network/virtualNetworks', parameters('informaticaVirtualNetworkName'))]"
    },
    "vnetId": "[variables('vnetIDs')[parameters('vnetExistingOrNew')]]",
    "subnetId": "[concat(variables('vnetID'), '/subnets/', parameters('informaticaSubnetName'))]"
  },
  "resources": [
    {
      "name": "[parameters('informaticaVirtualNetworkName')]",
      "condition": "[equals(parameters('vnetExistingOrNew'), 'new')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('vnetLocation')]",
      "apiVersion": "2016-10-01",
      "tags": {
        "displayName": "vnet",
        "provider": "[toUpper(parameters('informaticaTags').provider)]"
      },
      "dependsOn": [

      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('informaticaVirtualNetworkAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('informaticaSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('informaticaSubnetAddressPrefix')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "vnetId": {
      "value": "[variables('vnetId')]",
      "type": "string"
    },
    "subnetId": {
      "value": "[variables('subnetId')]",
      "type": "string"
    }
  }
}